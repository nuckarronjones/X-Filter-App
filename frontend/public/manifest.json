{
  "manifest_version": 3,
  "name": "X Filter",
  "description": "Filter and log tweets from X.com (formerly Twitter)",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"]
}
